@model Proj002_140618.Models.PedidoDeVenda

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Detalhes</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div>
        <h4>Pedido de Venda</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Cliente)
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Cliente.NomePessoa)
            </dd>
    
            <dt>
                @Html.DisplayNameFor(model => model.NumeroPedido)
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.NumeroPedido)
            </dd>
    
            <dt>
                @Html.DisplayNameFor(model => model.DataEmissao)
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.DataEmissao)
            </dd>
    
            <dt>
                @Html.DisplayNameFor(model => model.ValorTotal)
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.ValorTotal)
            </dd>
    
        </dl>

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayName("Cód. Produto")
                </th>
                <th>
                    @Html.DisplayName("Produto")
                </th>
                <th>
                    @Html.DisplayName("Vlr. Unit.")
                </th>
                <th>
                    @Html.DisplayName("Qtde")
                </th>
                <th>
                    @Html.DisplayName("% Desconto")
                </th>
                <th>
                    @Html.DisplayName("Vlr. Total")
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model.ItensDoPedidoDeVenda)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Produto.CodigoProduto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Produto.NomeProduto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PrecoUnitario)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Qtde)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PercentualDesconto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ValorTotal)
                    </td>
                </tr>
            }

        </table>
    </div>
    <p>
        @Html.ActionLink("Editar", "Edit", new { id = Model.IdPedidoVenda }) |
        @Html.ActionLink("Voltar", "Index")
    </p>
</body>
</html>
